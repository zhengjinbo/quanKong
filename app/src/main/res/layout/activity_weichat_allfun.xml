<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_wechat_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一键登陆微信"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_send_friend_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一键发送朋友圈"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_wechat_login"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_auto_prise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动点赞"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_send_friend_circle"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动评论"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_auto_prise"
        android:layout_marginTop="20dp"/>


</android.support.constraint.ConstraintLayout>